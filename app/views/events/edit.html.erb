<div class="page-margin"></div>

<div class="container">
	
</div>


<div class="row">
	<div class="col-sm-8 col-sm-offset-2">
	<h3>Edit: <%= @event.title %></h3>
	<div class="event-margin"></div>

		<% if @event.errors.any? %>
			<div id="error_explanation">
				<h3><%= pluralize(@event.errors.count, "error") %></h3>
			</div>
			<ul>
				<% @event.errors.full_messages.each do |error| %>
					<li><%= error %></li>
				<% end %>
			</ul>
		<% end %>
		<%= form_for @event do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :start_date %>
				<%= f.datetime_select(:start_date, order: [:day, :month, :year], start_year: Date.current.year, ampm: true, prompt: true) %>
			</div>
			<div class="form-group">
				<%= f.label :end_date %>
				<%= f.datetime_select(:end_date, order: [:day, :month, :year], start_year: Date.current.year, ampm: true, prompt: true) %>
			</div>
			<div class="form-group">
				<%= f.label :venue %>
				<%= f.text_field :venue, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :location %>
				<%= f.text_field :location, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.select(:category_id, @category_array, prompt: "Select Category") %>
			</div>
			
			<div class="form-group">
				<%= f.label :capacity %>
				<%= f.number_field :seats, placeholder: "The number of attendees to the @event", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.file_field :image %>
			</div>

			<div class="form-group">
			    <%= f.label :tags %>
			    <%= f.text_field :tag_list, placeholder: "Please enter comma separated words", class: "form-control" %>
  			</div>
  			
			<%= f.submit class: "button-submit" %>
		<% end %>

	
	</div>
</div>

<%= link_to "Cancel", event_path(@event) %>