<% provide(:title, @event.title) %>

<h2><%= @event.title %></h2>
<p>
	<%= @event.description %>
</p>
<p>
	<%= time_format(@event.start_date) %>
</p>
<p>
	<%= time_format(@event.end_date)  %>
</p>
<p>
	<%= @event.venue %>
</p>

<%= link_to "Edit", edit_event_path(@event) %> |
<%= link_to "Delete", event_path(@event), method: :delete, data: {confirm: "Are you sure ?"} %> |
