<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_for [:admin, category] do |f| %>

      <div class="form-group">
      	<%= f.label :name %>
      	<%= f.text_field :name, class: "form-control" %>
      </div>
	  
	  <div class="form-group">
	  	<%= f.label :summary %>
      	<%= f.text_field :summary, class: "form-control" %>
	  </div>
      
	  <div class="actions">
      	<%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>