<div class="container">
  <header>
  <h2>All Comments</h2><%= link_to "Back To Dashboard", admin_root_path %>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Author</th>
      <th>Body</th>
      <th>Created</th>
      <th>Event</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.full_name if comment.user %></td>
        <td><%= truncate(comment.body, length: 30) %></td>
        <td><%= time_format(comment.created_at) %></td>
        <td><%= link_to comment.event.title, event_path(comment.event) %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>